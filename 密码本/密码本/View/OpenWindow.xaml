<Window x:Class="密码本.View.OpenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:密码本.View"
        xmlns:ViewModel="clr-namespace:密码本.ViewModel"
        mc:Ignorable="d"
        Title="选择密码本" Height="150" Width="300" ResizeMode="NoResize">
    <Window.DataContext>
        <ViewModel:OpenViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="OpenTb" TextWrapping="Wrap"/>
        <Button x:Name="OkBtn" Content="确定" Grid.Row="1" Command="{Binding OkCommand}"/>
    </Grid>
</Window>
